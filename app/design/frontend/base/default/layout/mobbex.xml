<?xml version="1.0"?>
<layout version="0.1.0">
    <checkout_onepage_index>
        <reference name="content">
            <block type="Mage_Core_Block_Template" name="payment_script" template="mobbex/payment_script.phtml"/>
        </reference>
        <reference name='checkout.onepage.billing'>
            <block type='checkout/onepage_billing' name='form.additional.info' template='mobbex/billing_fields.phtml'></block>
        </reference>
    </checkout_onepage_index>
    <onestepcheckout_index_index>
        <reference name="content">
            <block type="Mage_Core_Block_Template" name="payment_script" template="mobbex/payment_script.phtml"/>
        </reference>
    </onestepcheckout_index_index>
    <firecheckout_index_index>
        <reference name="content">
            <block type="Mage_Core_Block_Template" name="payment_script" template="mobbex/payment_script.phtml"/>
        </reference>
    </firecheckout_index_index>
    <checkout_onepage_paymentmethod>
        <reference name="root">
            <block type="mobbex/payment_methods" name="payment.method.mobbex" template="mobbex/methods.phtml"/>
        </reference>
    </checkout_onepage_paymentmethod>
    <sales_order_view translate="label">
        <reference name="my.account.wrapper">
            <block type="sales/order_info" name="order_items_financing" template="mobbex/financingamount.phtml"/>
        </reference>
    </sales_order_view>
    <catalog_product_view translate="label">
        <reference name="content"> 
            <block type="mobbex/finance_widget" name="mobbex.product.widget" template="mobbex/finance.phtml" />
        </reference>
    </catalog_product_view>
    <checkout_cart_index translate="label">
        <reference name="checkout.cart.methods"> 
            <block type="mobbex/finance_widget" name="mobbex.product.widget" template="mobbex/finance.phtml" />
        </reference>
    </checkout_cart_index>
</layout>